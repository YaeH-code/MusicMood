{% extends 'base.html.twig' %}

{% block title %}Mood{% endblock %}

{% block body %}
    <h1>Mood</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mood.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mood.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mood_index') }}">Back to list</a>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for music in music %}
                    <tr>
                        <td>{{ music.id }}</td>
                        <td>{{ music.title }}</td>
                        <td>
                            {% if music.url %}
                                <a href="{{ music.url }}"  target="_blank"><i class="fa-brands fa-youtube  fa-2xl" style="color: red;"></i></i></a>
                            {% else %}
                                No URL available
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
