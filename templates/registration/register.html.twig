{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}


{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mt-5 mb-5 text-center">Inscription</h1>

    <div class="container text-center register_div">
    <div class="card registration">
    {{ form_start(registrationForm) }}
        <div class="form-group">
        <label for="">Email</label>
        {{ form_widget(registrationForm.email) }} {# Ajout du champ email ici #}
        </div>
        <div class="form-group">
        <label for="">Pseudo</label>
        {{ form_widget(registrationForm.pseudo) }}
        </div>
        <div class="form-group">
        <label for="">Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword, {
            label: 'Mot de pass'
        }) }}
        </div>
        <div class="form-group">
        <label for="">Accepter un terms</label>
        {{ form_widget(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="btn btn-dark">S'inscire</button>
    {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
