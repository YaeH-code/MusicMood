{% extends 'base.html.twig' %}

{% block title %}Mood index{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-5 text-center">Les Moods</h1>
    <div class="container mood_div">
        <table class="table table-borderless ">
            <thead>
                <tr class="text-uppercase">
                
                    <th>Nom de humeur</th>
                    <th class="text-center">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mood in moods %}
                <tr>
            
                    <td>{{ mood.name }}</td>
                    <td class="text-center actions_mood">
                        <a href="{{ path('app_admin_mood_show', {'id': mood.id}) }}" class="text-light">détail</a>
                        <a href="{{ path('app_admin_mood_edit', {'id': mood.id}) }}" class="text-light">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center btn_act">
        <a href="{{ path('app_admin_mood_new') }}" class="btn mt-3">Créer</a>
        </div>
    </div>
{% endblock %}
